{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "scripts/*.ts"],
  "exclude": ["node_modules"]
}
